<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/krem"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="348dp"
        android:layout_height="400dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/buton7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn7"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/buton8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn8"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/buton9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn9"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/butonBol"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnBol"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/buton4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn4"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/buton5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn5"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/buton6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn6"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/butonCarp"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnCarp"
            android:text="x"
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/buton1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn1"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/buton2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn2"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/buton3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn3"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/butonCikar"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnCikar"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/button12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnNegatif"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/buton0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/kahve"
            android:fontFamily="monospace"
            android:onClick="btn0"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/butonText"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/button14"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnNokta"
            android:text="."
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/butonTopla"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/diğer"
            android:fontFamily="monospace"
            android:onClick="btnTopla"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/butonIslem"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="101dp"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="start"
        android:hint="Lütfen birinci sayıyı girin"
        android:inputType="number"
        android:textColor="@color/kızıl"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="70dp"
        android:background="@color/krem"
        android:text="Sonuç:"
        android:textColor="@color/textViewEnd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <TextView
        android:id="@+id/textViewEkran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/kızıl"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEnd"
        app:layout_constraintStart_toEndOf="@+id/textViewEnd"
        app:layout_constraintTop_toTopOf="@+id/textViewEnd" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/yesil"
        android:onClick="temizle"
        android:text="Temizle"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Lütfen ikinci sayıyı girin"
        android:inputType="number"
        android:textColor="@color/kızıl"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@color/yesil"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="cursive"
        android:text="Hesapla"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>